# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

# Blocklets
[mediaplayer]
label= 
command=~/source/i3blocks-contrib/mediaplayer/mediaplayer
interval=5
signal=10

[connection]
command=~/.config/sway/blocklets/network
interval=30
signal=14

[memory]
command=~/source/i3blocks-contrib/memory/memory
label= 
instance=mem
interval=30

[swap]
command=~/source/i3blocks-contrib/memory/memory
label= 
instance=swap
interval=30

[brightness]
command=~/.config/sway/blocklets/brightness
interval=30
signal=11

[micophone]
command=~/.config/sway/blocklets/microphone
interval=30
signal=12

[volume]
command=~/.config/sway/blocklets/volume
interval=30
signal=13

[battery]
command=~/source/i3blocks-contrib/battery2/battery2
markup=pango
interval=30

[time]
command=date '+%Y/%m/%d %H:%M:%S'
interval=1

